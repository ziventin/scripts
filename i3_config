#ziventin i3 config
#basic

set $mod Mod4
set $terminal urxvt
set $browser firefox
set $si --no-startup-id
font pango:monospace 8
new_window 1pixel
for_window [class='^.*'] border none
gaps inner 10
gaps outer 10

#auto start

exec_always $si feh --bg-scale ~/.background
workspace $ws1
append_layout ~/scripts/i3_layouts/work1.json
workspace $ws2
append_layout ~/scripts/i3_layouts/work2.json

exec $si $terminal
exec $si $terminal
exec $si $browser

#basic binds

bindsym $mod+Return 		exec $terminal
bindsym $mod+Shift+Return

bindsym $mod+Shift+space 	floating toggle
bindsym $mod+space		focus mode_toggle

bindsym $mod+Escape		workspace prev
bindsym $mod+Shift+Escape 	exec i3-msg exit

bindsym $mod+BackSpace
bindsym $mod+Shift+BackSpace

bindsym $mod+grave
#bindsym $mod+asciitilde
bindsym $mod+Shift+Delete

#all binds

bindsym $mod+q			kill
bindsym $mod+Shift+q		kill

bindsym $mod+w
bindsym $mod+Shift+w

bindsym $mod+e			
#bindsym $mod+Shift+e

bindsym $mod+r
bindsym $mod+Shift+r		restart

bindsym $mod+t
bindsym $mod+Shift+t

bindsym $mod+y
bindsym $mod+Shift+y

bindsym $mod+u
bindsym $mod+Shift+u

bindsym $mod+i 
bindsym $mod+Shift+i

bindsym $mod+o
bindsym $mod+Shift+o

bindsym $mod+p
bindsym $mod+Shift+p

bindsym $mod+a
bindsym $mod+Shift+a

bindsym $mod+s
bindsym $mod+Shift+s

bindsym $mod+d			exec $si ~/scripts/lock.sh
bindsym $mod+Shift+d

bindsym $mod+f			exec $si $browser
#bindsym $mod+Shift+f	fullscreen toggle

bindsym $mod+g
bindsym $mod+Shift+g

bindsym $mod+h			focus left
bindsym $mod+Shift+h

bindsym $mod+j			focus down
bindsym $mod+Shift+j

bindsym $mod+k			focus up
bindsym $mod+Shift+k

bindsym $mod+l			focus right
bindsym $mod+Shift+l

bindsym $mod+z
bindsym $mod+Shift+z

bindsym $mod+x
bindsym $mod+Shift+x

bindsym $mod+c
#bindsym $mod+Shift+c

bindsym $mod+v			exec $si alsamixer
#bindsym $mod+Shift+v

bindsym $mod+b
bindsym $mod+Shift+b

bindsym $mod+n
bindsym $mod+Shift+n

bindsym $mod+m
bindsym $mod+Shift+m

bindsym F11		fullscreen toggle

#workspaces

set $ws "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
